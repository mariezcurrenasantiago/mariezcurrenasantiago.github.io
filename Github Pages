<body>
    
    <!-- Titulo -->
    <div class="container mt-2">
        <div class="row mt-3">
            <h3><i class="fa-solid fa-jedi"></i> Personaje - StarWars <img src="./img/lego_Yoda.png" alt="logoYoda" width="40"></h3>
            <p>Este frontend muestra una foto y los datos de un personaje StarWars</p>
        </div>
    </div>
    <!-- Formulario -->
     <div class="container">
        <form id="frmBuscar">
        <div class="row mt-3">
            <div class="col-md-4">
                <label class="form-label" for="fecha">Personaje:</label>
                <input class="form-control" type="text" name="personaje" id="personaje">
            </div>
        </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-sm btn-primary mt-2" id="btnBuscar"><i class="fas fa-search"></i> Buscar</button>
                </div>
            </div>
        </form>
     </div>
    
    <!-- content -->
    
        <div class="row my-5">
            <div id="resultado">
                <!-- COntenido -->
            </div>
            
        </div>
    
    <!-- Programacion js -->
    <script type="text/javascript">
        // listener
        $(function () {
            $("#frmBuscar").submit(function (e) {
                e.preventDefault();
                // alert(Bienvenido al buscador de la NASA ${$("#fecha").val()});
            });
            
            
            

            //evento click del boton buscar
            $("#btnBuscar").click(function(){
                cargarDatos();

            });
                
            function cargarDatos(){
                // Asignamos a personaje el valor del input y le quitamos los espacios en blanco
                const nombre = $("#personaje").val().trim();
                // Validamos que el input no este vacio
                if(!nombre){
                    $("#resultado").html(`<p class="alert alert-warning" role="alert" style="color:red;">
                                            Debe ingresar el nombre de un personaje StarWars
                                        </p>`);
                    return false;
                }
                $("#resultado").html(`<div class="loading">
                                    
                                        Buscando...
                                 
                                </div>`);
                $.ajax({
                    url: 'https://akabab.github.io/starwars-api/api/all.json',
                    method: 'GET',
                    success: function(data){
                        //Buscar dentro del array el personaje deseado (json)
                        const personaje = data.find(elemento => elemento.name.toLowerCase().includes(nombre.toLowerCase()));
                        if(personaje){
                            $("#resultado").html(`
                                <div class="card">
                                    <div class="card-body">
                                    <h2 class="card-title">${personaje.name}</h2>
                                        <div class="row">
                                            
                                            
                                            
                                            <p><strong>Planeta Natal:</strong> ${personaje.homeworld || "Desconocido"}</p>
                                            <p><strong>Especie:</strong> ${personaje.species}</p>
                                            <p><strong>Altura:</strong> ${personaje.height} cm</p>
                                            <p><strong>Peso:</strong> ${personaje.mass} kg</p>
                                            <p><strong>Género:</strong> ${personaje.gender}</p>
                                            <p><strong>Color de ojos:</strong> ${personaje.eye_color}</p>
                                            <p><strong>Cabello:</strong> ${personaje.hair_color}</p>


                                        </div>
                                        <div class="col-md-5">
                                            <img src="${personaje.image}" 
                                            alt="${personaje.name}" 
                                            class="img-fluid" 
                                            style="max-width:300px; border-radius:20px; border:4px solid #000; box-shadow: 0px 8px 20px rgba(0,0,0,0.3);"
                                            onerror="this.onerror=null;this.src='./img/lego_Yoda.png';">
                                        </div>
                                    </div>
                                </div>
                            `);
                           

                        }else{
                            $("#resultado").html(`<p class="alert alert-danger" role="alert" style="color:red;">
                                                    ❌ ${nombre} Personaje no encontrado
                                                    <br>Prueba con "Yoda"</br>
                                                </p>`);
                            return false;
                        }
                    },
                    error: function(error){
                        console.error('Error al realizar la solicitud:', error);
                        $("#resultado").html(`<p class="alert alert-danger" role="alert" style="color:red;">
                                                Ocurrió un error al buscar el personaje. Inténtalo de nuevo más tarde.
                                            </p>`);
                    }
                })

                
            }


        });

    </script>
</body>

